generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Employee {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  Address String   
  role    Role     
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
enum Role {
  Intern
  Engineer
  Admin
}


model Profile {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  age         Int
  dob         DateTime
  available   Boolean   @default(true)
  profile_url String?
  address     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

}